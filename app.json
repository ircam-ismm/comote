{
  "expo": {
    "name": "CoMo.te",
    "slug": "comote",
    "owner": "ircam-ismm",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "comote",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "bundleIdentifier": "fr.ircam.ismm.comote",
      "infoPlist": {
        "NSCameraUsageDescription": "Allow $(PRODUCT_NAME) to use the camera to scan QR codes",
        "NSMotionUsageDescription": "Allow $(PRODUCT_NAME) to access your device's accelerometer"
      },
      "entitlements": {
        "com.apple.security.cs.allow-jit": true,
        "com.apple.security.device.camera": true
      },
      "supportsTablet": true
    },
    "android": {
      "softwareKeyboardLayoutMode": "pan",
      "package": "fr.ircam.ismm.comote",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "BODY_SENSORS",
        "CAMERA"
      ]
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    }
  }
}
